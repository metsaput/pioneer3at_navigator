<!-- 
    ROS navigation stack with velocity smoother and safety (reactive) controller
-->
<launch>
  <include file="$(find pioneerauto)/launch/includes/velocity_smoother.launch.xml"/> <!-- OK -->
  <!-- TODO write a Pioneer safety controller that stops the robot on collision or cliff detection
  <include file="$(find turtlebot_navigation)/launch/includes/safety_controller.launch.xml"/> -->
  
  <arg name="odom_frame_id"   default="odom"/>
  <arg name="base_frame_id"   default="base_link"/> <!-- Changed OK -->
  <arg name="global_frame_id" default="map"/>
  <arg name="odom_topic" default="odometry/filtered" />
  <arg name="laser_topic" default="/scan" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <remap from="cmd_vel" to="navigation_velocity_smoother/raw_cmd_vel"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="scan" to="$(arg laser_topic)"/>
  </node>

 <!-- <node pkg="gmapping" type="slam_gmapping" name="gmapping_Slam" />  -->

</launch>
