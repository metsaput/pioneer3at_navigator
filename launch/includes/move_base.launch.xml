<!-- 
    ROS navigation stack with velocity smoother and safety (reactive) controller
-->
<launch>
  <include file="$(find pioneerauto)/launch/includes/velocity_smoother.launch.xml"/> <!-- OK -->
  <!-- TODO write a Pioneer safety controller that stops the robot on collision or cliff detection
  <include file="$(find turtlebot_navigation)/launch/includes/safety_controller.launch.xml"/> -->
  
  <arg name="odom_frame_id"   default="odom"/>
  <arg name="base_frame_id"   default="base_link"/> <!-- Changed OK -->
  <arg name="global_frame_id" default="map"/>
  <arg name="odom_topic" default="odom"/><!-- "odometry/filtered" /> -->
  <arg name="laser_topic" default="scan" />
  <arg name="custom_param_file" default="$(find pioneerauto)/param/dummy.yaml"/><!-- empty file to load when no custom param file is loaded -->

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!-- TODO costmap_common assumes bump sensors and a laserscan fx this  -->
    <rosparam file="$(find pioneerauto)/param/costmap_common_params2.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find pioneerauto)/param/costmap_common_params2.yaml" command="load" ns="local_costmap" /> 
    <rosparam file="$(find pioneerauto)/param/local_costmap_params.yaml" command="load" /> <!-- Changed OK -->  
    <rosparam file="$(find pioneerauto)/param/global_costmap_params.yaml" command="load" />  <!--Changed OK -->
    <!-- TODO dwa planner is configured for Kubuki velocities, need to adjust to pioneer-->
    <rosparam file="$(find pioneerauto)/param/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find pioneerauto)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find pioneerauto)/param/global_planner_params.yaml" command="load" />
    <rosparam file="$(find pioneerauto)/param/navfn_global_planner_params.yaml" command="load" />
    <!-- external params file that could be loaded into the move_base namespace -->
    <rosparam file="$(arg custom_param_file)" command="load" />

    <!-- reset frame_id parameters using user input data -->
    <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
    <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/>

    <remap from="cmd_vel" to="navigation_velocity_smoother/raw_cmd_vel"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="scan" to="$(arg laser_topic)"/>
  </node>

</launch>
